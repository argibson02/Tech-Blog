<div class="dish-card">
  <div class="dish-card-header">
    {{article_title}}
  </div>
  <div class="card-body">
    <p>
      {{description}}
    </p>
    <p>
      Author:
      {{author}}
      {{timestamp}}
    </p>
    {{#each article.comment as |comment|}}
    {{> comment-details}}}
    {{/each}}
  </div>
</div>

