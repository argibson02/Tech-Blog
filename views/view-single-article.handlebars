<div class="edit-article-container">
  <h2>Add a comment!</h2>
  <form class="edit-article-form">
    <label for="description">
     Comment body:
    </label>
    <br />
    <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>
<script src="/js/add-comment.js"></script>

