<div class="add-article-container">
  <h2 class="custom-h2">Create a post</h2>
  <form class="new-article-form">
    <label for="article_title">
      Title:
    </label>
    <br />
    <textarea id="article_title" name="article_title" rows="2" cols="30">
      {{article_title}}
    </textarea>
    <br />
    <label for="description">
      Description:
    </label>
    <br />
    <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
    <br />
    <div class="hidden">
      <p class="logged-info">Username: <span id="username">{{username}}</span></p>
      <p class="logged-info">Id: <span id="userid">{{userid}}</span></p>
    </div>
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>
<script src="/js/add-article.js"></script>